<Project>
	<ItemGroup>
		<GlobalExcludes Include="$(MSBuildThisFileDirectory)obj/**;$(MSBuildThisFileDirectory)bin/**" />
		<ApplicationDefinition Include="$(MSBuildThisFileDirectory)App.xaml"
								Link="%(Filename)%(Extension)"
								SubType="Designer"
								Generator="MSBuild:Compile"
								Visible="false" />
		<Page Include="$(MSBuildThisFileDirectory)**\*.xaml"
				Link="%(RecursiveDir)%(Filename)%(Extension)"
				SubType="Designer"
				Generator="MSBuild:Compile"
				Exclude="$(ApplicationDefinition);@(GlobalExcludes)"
				Visible="false" />
		<Compile Include="$(MSBuildThisFileDirectory)**\*.cs" Exclude="@(GlobalExcludes)" Link="%(RecursiveDir)%(Filename)%(Extension)" Visible="false" />
		<Content Include="$(MSBuildThisFileDirectory)Assets\**" Exclude="$(MSBuildThisFileDirectory)Assets\SharedAssets.md;@(GlobalExcludes)" LinkBase="Assets" Visible="false" />
		<PRIResource Include="$(MSBuildThisFileDirectory)Strings\**\*.resw" Exclude="@(GlobalExcludes)" SubType="Designer" LinkBase="Strings" Visible="false" />
		<EmbeddedResource Include="$(MSBuildThisFileDirectory)appsettings*.json" CopyToOutputDirectory="PreserveNewest" Visible="false" />
		<Content Include="$(MSBuildThisFileDirectory)*.json" Link="%(Filename)%(Extension)" CopyToOutputDirectory="PreserveNewest" Visible="false" />
	</ItemGroup>
</Project>
