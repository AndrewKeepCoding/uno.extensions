{
  "$schema": "http://json.schemastore.org/template",
  "author": "Uno Platform",
  "classifications": [
    "Multi-platform",
    "Uno Platform",
    "Android",
    "iOS",
    "Windows",
    "macOS",
    "Linux",
    "WebAssembly",
    "WinUI",
    "WindowsAppSdk",
    "Extensions",
    "dotnet-new"
  ],
  "name": "Multi-Platform App (Uno.Extensions)",
  "identity": "Uno.Extensions.TemplateStudio.CSharp",
  "groupIdentity": "Uno.Extensions",
  "description": "Solution template for creating a multi-platform C# & XAML application targeting Windows App SDK, Android, iOS, macOS, WebAssembly, Skia/WPF and Skia/GTK for Linux.",
  "precedence": "6001",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "shortName": "unoapp-extensions",
  "sourceName": "MyExtensionsApp",
  "defaultName": "UnoExtApp",
  "placeholderFilename": "template-ignore",
  "preferNameDirectory": true,
  "guids": [
    "C7433AE2-B1A0-4C1A-887E-5CAA7AAF67A6", // Solution file (SolutionGuid)
    "BACDD33A-304C-46C4-9B00-AC166978D7E0", // (core) .NET Standard Library
    "339C569C-EE23-445E-B908-743673EE5BC9", // Platforms Solution folder
    "24D56E12-2373-4CBD-9AD4-5C931D15FB0D", // Mobile
    "40EA03F7-8A22-4143-B251-79BAC3EB13D2", // Wasm
    "A5B8155A-118F-4794-B551-C6F3CF7E5411", // Skia.Gtk
    "6C744695-DA38-44D9-B487-FE5804C5508D", // Skia.WPF
    "5A78EE9A-1922-468C-96E3-45817727511C", // Windows
    "925C7A3E-6532-4E27-8ABE-37A4F9B73C8B", // Skia.Linux.FrameBuffer
    "1ADD4B1D-2758-4ED5-963A-FE3F4206BF20", // Server
    "7EF70027-9874-4112-A14F-33F02169CF8A", // Tests Solution folder
    "EB3EB846-D5CB-4140-834F-1CC40A0FD6D0", // Tests
    "7229D034-7DBE-4FD7-B0E4-38D617571F93", // UITests
    "E2821155-50B7-468D-A15B-E0EAF55DAC2B", // WINDOWS - Package.appxmanifest Identity.Name
    "F5EAE47C-F7DF-4D61-8A30-92251720AC4B", // Mobile Application Id
    "5ED31500-DF01-462D-9436-EC2EDCAA1965" // DataContracts
  ],
  "symbols": {
    "appid": {
      "displayName": "App ID",
      "type": "parameter",
      "datatype": "string",
      "replaces": "com.companyname.myextensionsapp",
      "description": "The application identifier (e.g. com.mycompany.myapp).",
      "defaultValue": "com.companyname.myextensionsapp"
    },
    "tfm": {
      "displayName": "Framework",
      "type": "parameter",
      "datatype": "choice",
      "replaces": "net6.0",
      "description": "Target Framework",
      "choices": [
        {
          "choice": "net6.0",
          "displayName": ".NET 6.0 (Long Term Support)",
          "description": "Target .NET 6.0 (Long Term Support)"
        },
        {
          "choice": "net7.0",
          "displayName": ".NET 7.0 (Standard Term Support)",
          "description": "Target .NET 7.0 (Standard Term Support)"
        }
      ]
    },
    "architecture": {
      "displayName": "Presentation",
      "description": "Selects either MVVM or MVUX for the design architecture.",
      "type": "parameter",
      "datatype": "choice",
      "defaultValue": "mvux",
      "choices": [
        {
          "choice": "mvvm",
          "description": "Use the MVVM design pattern",
          "displayName": "MVVM (Model-View-ViewModel)"
        },
        {
          "choice": "mvux",
          "description": "Use the MVUX design pattern with Uno.Extensions.Reactive",
          "displayName": "MVU-X (Model-View-Update XAML Friendly)"
        }
      ]
    },
    "ui-markup": {
      "displayName": "UI Markup",
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "xaml",
          "description": "Use XAML for the UI",
          "displayName": "XAML"
        },
        {
          "choice": "csharp",
          "description": "Use C# Markup for the UI",
          "displayName": "C# Markup"
        }
      ],
      "defaultValue": "xaml"
    },
    "use-csharp-markup": {
      "type": "computed",
      "datatype": "bool",
      "value": "(ui-markup == 'csharp')"
    },
    "app-theme": {
      "displayName": "Theme",
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "material",
          "description": "Uses the Material Design theme",
          "displayName": "Material"
        },
        {
          "choice": "fluent",
          "description": "Uses the Fluent Design theme",
          "displayName": "Fluent"
        },
        {
          "choice": "cupertino",
          "description": "Uses the Cupertino theme",
          "displayName": "Cupertino"
        }
      ],
      "defaultValue": "material"
    },
    "use-material": {
      "type": "computed",
      "datatype": "bool",
      "value": "(app-theme == 'material')"
    },
    "use-fluent": {
      "type": "computed",
      "datatype": "bool",
      "value": "(app-theme == 'fluent')"
    },
    "use-cupertino": {
      "type": "computed",
      "datatype": "bool",
      "value": "(app-theme == 'cupertino')"
    },
    "android": {
      "displayName": "Mobile - Android",
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "true",
      "description": "Enables the Android platform in the Mobile support project"
    },
    "ios": {
      "displayName": "Mobile - iOS",
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "true",
      "description": "Enables the iOS platform in the Mobile support project"
    },
    "maccatalyst": {
      "displayName": "Desktop - macOS (Catalyst)",
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "true",
      "description": "Enables the macOS (Catalyst) platform in the Mobile support project"
    },
    "macos": {
      "displayName": "Desktop - macOS (AppKit)",
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "true",
      "description": "Enables the macOS (AppKit) platform in the Mobile support project"
    },
    "skia-gtk": {
      "displayName": "Desktop - Gtk (Linux, macOS, Windows 7 or later)",
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "true",
      "description": "Enables the Skia/GTK platform support project"
    },
    "skia-wpf": {
      "displayName": "Desktop - WPF (Windows 7 or later)",
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "true",
      "description": "Enables the Skia/WPF platform support project"
    },
    "skia-linux-fb": {
      "displayName": "Desktop - Linux Framebuffer",
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "true",
      "description": "Enables the Skia/Linux Framebuffer platform support project"
    },
    "winAppSdk": {
      "displayName": "Desktop - WinUI (Windows App SDK)",
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "true",
      "description": "Enables the Windows App Sdk platform support project"
    },
    "wasm": {
      "displayName": "Web - WebAssembly",
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "true",
      "description": "Enables the WebAssembly platform support project"
    },
    "unittest": {
      "displayName": "Tests - Unit Tests",
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Includes the Unit test project"
    },
    "tests": {
      "displayName": "Tests - UI Tests",
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Includes the UI test project"
    },
    "server": {
      "displayName": "Server - API",
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false",
      "description": "Includes a Server project for an API & host for the WebAssembly project"
    },
    "use-configuration": {
      "displayName": "Extensions - Configuration",
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Includes Uno.Extensions.Configuration"
    },
    "use-http": {
      "displayName": "Extensions - HTTP",
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true"
    },
    "use-localization": {
      "displayName": "Extensions - Localization",
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Includes  Uno.Extensions.Localization"
    },
    "logging": {
      "displayName": "Extensions - Logging",
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Includes Uno.Extensions.Logging"
    },
    "serilog": {
      "displayName": "Extensions - Serilog",
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "true",
      "description": "Includes Uno.Extensions.Logging.Serilog when logging is enabled",
      "isEnabled": "logging"
    },
    "navigation": {
      "displayName": "Extensions - Navigation",
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "frame",
          "displayName": "Frame (use single Frame for navigation)",
          "description": "This provides basic Frame navigation similar to a standard blank template."
        },
        {
          "choice": "toolkit",
          "displayName": "ExtendedSplashScreen (using Uno.Extensions.Navigation.Toolkit.WinUI)",
          "description": "This provides navigation using the Uno.Extensions.Navigation.Toolkit.WinUI package."
        }
      ],
      "defaultValue": "toolkit",
      "description": "Sets the base type of navigation used in the app."
    },
    "cpm": {
      "displayName": "Central Package Management",
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false",
      "description": "Whether or not to use Central Package Management - package versions are via central Directory.Packages.props file"
    },
    "use-logging": {
      "type": "computed",
      "datatype": "bool",
      "value": "logging"
    },
    "use-serilog": {
      "type": "computed",
      "datatype": "bool",
      "value": "(logging && serilog)"
    },
    "reactive": {
      "type": "computed",
      "datatype": "bool",
      "value": "architecture == 'mvux'"
    },
    "mobile": {
      "type": "computed",
      "dataType": "bool",
      "value": "(android || ios || macos || maccatalyst)"
    },
    "vscode": {
      "displayName": "WebAssembly - Visual Studio Code Debugging",
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false",
      "description": "Adds the Visual Studio Code Debugging support files for WebAssembly"
    },
    "skipRestore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "If specified, skips the automatic restore of the project on create.",
      "defaultValue": "false"
    },
    "wasm-pwa-manifest": {
      "displayName": "WebAssembly - PWA Manifest",
      "type": "parameter",
      "datatype": "bool",
      "description": "Enables the generation of a PWA manifest for WebAssembly",
      "defaultValue": "true"
    },
    "msftextv6" :{
      "type": "computed",
      "datatype": "bool",
      "value": "tfm == 'net6.0'"
    },
    "msftextv7": {
      "type": "computed",
      "datatype": "bool",
      "value": "tfm == 'net7.0'"
    },
    "use-frame-nav": {
      "type": "computed",
      "datatype": "bool",
      "value": "navigation == 'frame'"
    },
    "use-toolkit-nav": {
      "type": "computed",
      "datatype": "bool",
      "value": "navigation == 'toolkit'"
    },
    "is-vsix": {
      "type": "parameter",
      "datatype": "bool",
      "defaultValue": "false"
    }
  },
  "primaryOutputs": [
    {
      "path": "MyExtensionsApp.sln",
      "condition": "!is-vsix"
    },
    {
      "path": "MyExtensionsApp\\MyExtensionsApp.csproj"
    },
    {
      "condition": "server",
      "path": "MyExtensionsApp.Server\\MyExtensionsApp.Server.csproj"
    },
    {
      "condition": "server || use-http",
      "path": "MyExtensionsApp.DataContracts\\MyExtensionsApp.DataContracts.csproj"
    },
    {
      "condition": "unittest",
      "path": "MyExtensionsApp.Tests\\MyExtensionsApp.Tests.csproj"
    },
    {
      "condition": "tests",
      "path": "MyExtensionsApp.UITests\\MyExtensionsApp.UITests.csproj"
    },
    {
      "condition": "cpm",
      "path": "Directory.Packages.props"
    },
    {
      "condition": "mobile",
      "path": "MyExtensionsApp.App\\MyExtensionsApp.Mobile.csproj"
    },
    {
      "condition": "winAppSdk",
      "path": "MyExtensionsApp.App\\MyExtensionsApp.Windows.csproj"
    },
    {
      "condition": "wasm",
      "path": "MyExtensionsApp.App\\MyExtensionsApp.Wasm.csproj"
    },
    {
      "condition": "skia-gtk",
      "path": "MyExtensionsApp.App\\MyExtensionsApp.Skia.Gtk.csproj"
    },
    {
      "condition": "skia-wpf",
      "path": "MyExtensionsApp.App\\MyExtensionsApp.Skia.Wpf.csproj"
    },
    {
      "condition": "skia-linux-fb",
      "path": "MyExtensionsApp.App\\MyExtensionsApp.Skia.Linux.FrameBuffer.csproj"
    }
  ],
  "sources": [
    {
      "modifiers": [
        {
          "copyOnly": [
            "**/*.png",
            "**/*.jpg",
            "**/*.gif",
            "**/*.woff",
            "**/*.ttf"
          ],
          "exclude": [
            "MyExtensionsApp.Debugging.sln"
          ]
        },
        {
          "condition": "is-vsix",
          "exclude": [
            "**/*.sln"
          ]
        },
        {
          "condition": "(!android)",
          "exclude": [
            "MyExtensionsApp.App/Platforms/Android/**/*"
          ]
        },
        {
          "condition": "(!ios)",
          "exclude": [
            "MyExtensionsApp.App/Platforms/iOS/**/*"
          ]
        },
        {
          "condition": "(!macos)",
          "exclude": [
            "MyExtensionsApp.App/Platforms/macOS/**/*"
          ]
        },
        {
          "condition": "(!maccatalyst)",
          "exclude": [
            "MyExtensionsApp.App/Platforms/MacCatalyst/**/*"
          ]
        },
        {
          "condition": "(!mobile)",
          "exclude": [
            "MyExtensionsApp.App/MyExtensionsApp.Mobile.csproj",
            "MyExtensionsApp.App/MyExtensionsApp.Mobile.nocpm.csproj"
          ]
        },
        {
          "condition": "(!wasm)",
          "exclude": [
            "MyExtensionsApp.App/Platforms/WebAssembly/**/*",
            "MyExtensionsApp.App/MyExtensionsApp.Wasm.csproj",
            "MyExtensionsApp.App/MyExtensionsApp.Wasm.nocpm.csproj"
          ]
        },
        {
          "condition": "(!skia-gtk)",
          "exclude": [
            "MyExtensionsApp.App/Platforms/Skia.Gtk/**/*",
            "MyExtensionsApp.App/MyExtensionsApp.Skia.Gtk.csproj",
            "MyExtensionsApp.App/MyExtensionsApp.Skia.Gtk.nocpm.csproj"
          ]
        },
        {
          "condition": "(!skia-wpf)",
          "exclude": [
            "MyExtensionsApp.App/Platforms/Skia.WPF/**/*",
            "MyExtensionsApp.App/MyExtensionsApp.Skia.WPF.csproj",
            "MyExtensionsApp.App/MyExtensionsApp.Skia.WPF.nocpm.csproj"
          ]
        },
        {
          "condition": "(!skia-linux-fb)",
          "exclude": [
            "MyExtensionsApp.App/Platforms/Skia.FrameBuffer/**/*",
            "MyExtensionsApp.App/MyExtensionsApp.Skia.Linux.FrameBuffer.csproj",
            "MyExtensionsApp.App/MyExtensionsApp.Skia.Linux.FrameBuffer.nocpm.csproj"
          ]
        },
        {
          "condition": "(!winAppSdk)",
          "exclude": [
            "MyExtensionsApp.App/Platforms/Windows/**/*",
            "MyExtensionsApp.App/MyExtensionsApp.Windows.csproj",
            "MyExtensionsApp.App/MyExtensionsApp.Windows.nocpm.csproj"
          ]
        },
        {
          "condition": "(!server)",
          "exclude": [
            "MyExtensionsApp.Server/**/*"
          ]
        },
        {
          "condition": "(!use-http && !server)",
          "exclude": [
            "MyExtensionsApp.DataContracts/**/*"
          ]
        },
        {
          "condition": "(!use-http)",
          "exclude": [
            "MyExtensionsApp/Services/IApiClient.cs"
          ]
        },
        {
          "condition": "(!unittest)",
          "exclude": [
            "MyExtensionsApp.Tests/**/*"
          ]
        },
        {
          "condition": "(!tests)",
          "exclude": [
            "MyExtensionsApp.UITests/**/*"
          ]
        },
        {
          "condition": "(!cpm)",
          "exclude": [
            "MyExtensionsApp/MyExtensionsApp.csproj",
            "MyExtensionsApp.App/MyExtensionsApp.Mobile.csproj",
            "MyExtensionsApp.App/MyExtensionsApp.Skia.Gtk.csproj",
            "MyExtensionsApp.App/MyExtensionsApp.Skia.Linux.FrameBuffer.csproj",
            "MyExtensionsApp.App/MyExtensionsApp.Skia.WPF.csproj",
            "MyExtensionsApp.App/MyExtensionsApp.Wasm.csproj",
            "MyExtensionsApp.App/MyExtensionsApp.Windows.csproj",
            "MyExtensionsApp.ServerApp/MyExtensionsApp.Server.csproj",
            "MyExtensionsApp.Tests/MyExtensionsApp.Tests.csproj",
            "MyExtensionsApp.UITests/MyExtensionsApp.UITests.csproj",
            "Directory.Build.props",
            "Directory.Packages.props"
          ]
        },
        {
          "condition": "(cpm)",
          "exclude": [
            "**/*.nocpm.props",
            "**/*.nocpm.csproj"
          ]
        },
        {
          "condition": "(!vscode)",
          "exclude": [
            ".vscode/**/*"
          ]
        },
        {
          "condition": "(!wasm-pwa-manifest)",
          "exclude": [
            "MyExtensionsApp.App/Platforms/WebAssembly/manifest.json",
            "MyExtensionsApp.App/Platforms/WebAssembly/Assets/AppIcon-*"
          ]
        },
        {
          "condition": "(!cpm)",
          "rename": {
              ".nocpm.csproj": ".csproj",
              "Directory.Build.nocpm.props": "Directory.Build.props"
          }
        },
        {
          "condition": "(!use-csharp-markup)",
          "exclude": [
            "MyExtensionsApp.App/Infrastructure/ApplicationBuilderExtensions.cs",
            "MyExtensionsApp.App/Styles/*.cs"
          ]
        },
        {
          "condition": "(use-csharp-markup)",
          "exclude": [
            "MyExtensionsApp.App/Styles/*.xaml",
            "MyExtensionsApp.App/Views/*.xaml"
          ],
          "rename": {
            "MyExtensionsApp.App/Views/MainPage.xaml.cs": "MyExtensionsApp.App/Views/MainPage.cs",
            "MyExtensionsApp.App/Views/SecondPage.xaml.cs": "MyExtensionsApp.App/Views/SecondPage.cs",
            "MyExtensionsApp.App/Views/Shell.xaml.cs": "MyExtensionsApp.App/Views/Shell.cs"
          }
        },
        {
          "condition": "(use-frame-nav)",
          "exclude": [
            "MyExtensionsApp/Presentation/**",
            "MyExtensionsApp.App/Views/MainPage.xaml",
            "MyExtensionsApp.App/Views/MainPage.xaml.cs",
            "MyExtensionsApp.App/Views/SecondPage.xaml",
            "MyExtensionsApp.App/Views/SecondPage.xaml.cs",
            "MyExtensionsApp.App/Views/Shell.xaml",
            "MyExtensionsApp.App/Views/Shell.xaml.cs"
          ],
          "rename": {
            "MyExtensionsApp.App/Views/Blank.xaml": "MyExtensionsApp.App/Views/MainPage.xaml",
            "MyExtensionsApp.App/Views/Blank.xaml.cs": "MyExtensionsApp.App/Views/MainPage.xaml.cs"
          }
        },
        {
          "condition": "(use-toolkit-nav)",
          "exclude": [
            "MyExtensionsApp.App/Views/Blank.xaml",
            "MyExtensionsApp.App/Views/Blank.xaml.cs"
          ]
        }
      ]
    }
  ],
  "postActions": [
    {
      "condition": "(!skipRestore)",
      "description": "Restore NuGet packages required by this project",
      "manualInstructions": [
        {
          "text": "Run 'dotnet restore'"
        }
      ],
      "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
      "continueOnError": true
    }
  ]
}
